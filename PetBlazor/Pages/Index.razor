@page "/"
@inherits IndexModel

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>
<h2>@Message</h2>
<h2>T: @MessageT</h2>

Welcome to your new app.


<AgeCalculateComponent dateOnly="new DateOnly(2002,12,18)">this is child content mb</AgeCalculateComponent>
<hr />
<BindExplorerComponent LinkEventCallbackWithArbitraty="ShowCallbackArb" LinkEventCallbackWithT="ShowCallbackT" LinkEventCallback="ShowCallback"></BindExplorerComponent>

@foreach (var item in list)
{
    <h5>@item</h5>
}

@code{
    public string Message { get; set; } = "Callback";
    public string MessageT { get; set; } = "TCallback";
    List<string> list = new List<string>();
    public void ShowCallback()
    {
        Message = "Callback clicked!!!";
    }
    public void ShowCallbackT(MouseEventArgs e)
    {
        MessageT = "TCallback " + e.AltKey.ToString();
    }
    public void ShowCallbackArb(string str)
    {
        list.Add(str);
    }
}



